@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    string CurrentPage = HttpContextAccessor.HttpContext.Request.RouteValues["Page"].ToString();

    switch (CurrentPage)
    {
        case "/Account/Login":
            Layout = "_LoginLayout";
            break;

        case "/Error":
            Layout = "_ErrorPageLayout";
            break;

        default:
            Layout = "_Layout";
            break;
    }

}
