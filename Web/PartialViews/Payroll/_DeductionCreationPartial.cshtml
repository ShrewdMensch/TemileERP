<form id="deductionCreateForm" method="post" data-parsley-validate>
    <!-- Modal -->
    <div class="modal fade animated fadeInUp custo-fadeInUp show" id="deductionCreateModal" data-backdrop="static"
        data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm  modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="feather feather-dollar-sign">
                        <line x1="12" y1="1" x2="12" y2="23"></line>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                    <h5 class="modal-title" id="exampleModalLabel">Add New Deduction</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-sm-12">
                            <label class="control-label" for="Name">Deduction Name <span
                                    class="text-danger">*</span></label>
                            <input required data-parsley-required-message="Deduction name is required"
                                class="form-control" type="text" id="Name" value="" name="Name">
                        </div>
                        <div class="form-group col-sm-12 tb-alternating">
                            <label class="control-label" for="Percentage">Deduction Percentage (%) <span
                                    class="text-danger">*</span></label>
                            <input class="form-control" required id="Percentage" min="1" max="100" step="0.1"
                                type="text" data-parsley-required-message="Deduction percentage is required"
                                data-parsley-errors-container="#percentage_error"
                                data-parsley-trigger-after-failure="change"
                                data-parsley-min-message="Deduction percentage should be not < 1"
                                data-parsley-max-message="Deduction percentage should not be > 100" name="Percentage" />
                            <span id="percentage_error"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i>
                        Discard</button>
                    <button id="createBtn" asp-page-handler="CreateDeduction" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>