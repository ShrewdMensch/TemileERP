@page "{handler?}"
@model PayrollModel
@using Utility
@using static Utility.UtilityFunctions

@{
    ViewData["Title"] = "Payroll Processing";
    ViewData["Name"] = "Payroll";
}
<div class="page-header">
    <div class="page-title">
        <h3>Payroll Processing</h3>
    </div>
</div>

<input type="text" hidden id="message-body" value="@Model.MessageBody.GetHtmlString()">
<input type="text" hidden id="message-title" value="@Model.MessageTitle">
<input type="text" hidden id="message-icon" value="@Model.MessageIcon">


<div class="row d-flex justify-content-end mt-3">
    <div class="col-sm-12 col-md-4 layout-spacing">
        <div class="widget widget-card-four">
                            <div class="widget-content">
                                <div class="w-content">
                                    <div class="w-info">
                                        <h6 class="value">40</h6>
                                        <p class="">Payroll Processed</p>
                                    </div>
                                    <div class="">
                                        <div class="w-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-dollar-sign"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
    </div>
    <div class="col-sm-12 col-md-4 layout-spacing">
        <div class="widget widget-card-four">
                            <div class="widget-content">
                                <div class="w-content">
                                    <div class="w-info">
                                        <h6 class="value">100</h6>
                                        <p class="">Active Employees</p>
                                    </div>
                                    <div class="">
                                        <div class="w-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user-check"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="8.5" cy="7" r="4"></circle><polyline points="17 11 19 13 23 9"></polyline></svg>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
    </div>
    <div class="col-sm-12 col-md-4 layout-spacing">
        <div class="widget widget-card-four">
                            <div class="widget-content">
                                <div class="w-content">
                                    <div class="w-info">
                                        <h6 class="value">10</h6>
                                        <p class="">Inactive Employees</p>
                                    </div>
                                    <div class="">
                                        <div class="w-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user-minus"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="8.5" cy="7" r="4"></circle><line x1="23" y1="11" x2="17" y2="11"></line></svg>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
    </div>
</div>
<div class="row" id="cancel-row">

    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
        <div class="widget-content widget-content-area br-6">
                 <table id="table" class="display text-left" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>DailyRate</th>
                                            <th>DaysWorked</th>
                                            <th>Platform</th>
                                            <th>TotalPay</th>
                                            <th>Deductions(%)</th>
                                            <th>NetPay</th>
                                            <th>Period</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var payroll in Model.Payrolls)
                                        {
                                            <tr>
                                            <td>
                                                <div class="d-flex">                                                        
                                                    <div class="usr-img-frame mr-2 rounded-circle">
                                                        <img alt="avatar" class="img-fluid rounded-circle" src="@GetUserImagePath(payroll.PersonnelPhoto)">
                                                    </div>
                                                    <p class="align-self-center mb-0 admin-name">@payroll.PersonnelName </p>
                                                </div>
                                            </td>
                                            <td>@payroll.DailyRate.ToCurrency()</td>
                                            <td>@payroll.DaysWorked</td>
                                            <td>@payroll.Platform</td> 
                                            <td>@payroll.TotalPay.ToCurrency()</td>
                                            <td>@payroll.ActualDeductions.ToCurrency() (@payroll.TotalDeductions%)</td>
                                            <td>@payroll.NetPay.ToCurrency()</td>
                                            <td>
                                                @payroll.Period
                                            </td>
                                            <td class="text-right">
                                                 <a class="text-primary" data-toggle="modal" data-target="#currentPayrollVariablesModal" 
                                                 data-personnel-id="@payroll.PersonnelId"
                                                 data-payroll-id="@payroll.PayrollId">
                                                     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
                                                </a>
                                             </td>
                                        </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>DailyRate</th>
                                            <th>DaysWorked</th>
                                            <th>Platform</th>
                                            <th>TotalPay</th>
                                            <th>Deductions(%)</th>
                                            <th>NetPay</th>
                                            <th>Period</th>
                                           <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
        </div>
    </div>

</div>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @{
        await Html.RenderPartialAsync("/PartialViews/_DataTablesScriptsImport.cshtml");
    }    

    @{
        await Html.RenderPartialAsync("/PartialViews/_SweetAlertPartial.cshtml");
    }
    <script src="~/js/app/payroll.js"></script>

}