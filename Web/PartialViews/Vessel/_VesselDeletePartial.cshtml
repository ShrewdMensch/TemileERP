<form id="vesselDeleteForm" method="post">
    <div class="modal fade animated fadeInUp modal-notification custo-fadeInUp show" id="vesselDeleteModal"
        tabindex="-1" role="dialog" aria-labelledby="vesselDeleteModal" aria-modal="true">
        <div class="modal-dialog" role="document" id="vesselDeleteModal">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div class="icon-content text-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="feather feather-bell">
                            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                            <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                        </svg>
                    </div>
                    <input type="text" hidden value="" id="deleteVesselId" name="Id">
                    <p class="text-danger">Are you sure you want to delete vessel, <span
                            class="text-primary font-weight-bold" id="vesselName"></span>
                        permanently from the System?
                    </p>
                </div>
                <div class="modal-footer justify-content-between">
                    <button class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i> Discard</button>
                    <button asp-page-handler="DeleteVessel" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>