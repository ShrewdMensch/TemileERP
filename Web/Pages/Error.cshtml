@page "{code?}"
@model ErrorModel
@{
    ViewData["Title"] = "Error";
    var errorMessage = "";

    switch (Model.ErrorStatusCode)
    {
        case "404":
            errorMessage = "The page you requested was not found!";
            break;

        case "500":
            errorMessage = "Internal Server Error!";
            break;

        case "503":
            errorMessage = "Service Unavailable!";
            break;

        default:
            errorMessage = "An error ocurred!";
            break;
    }
}


<div class="container-fluid error-content">
    <div class="">
        <h1 class="error-number">@Model.ErrorStatusCode</h1>
        <p class="mini-text">Ooops!</p>
        <p class="error-text mb-4 mt-1">@errorMessage</p>
        <a asp-page="/Dashboard" class="btn btn-primary mt-5">Go Back</a>
    </div>
</div>